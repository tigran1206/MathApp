<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_alert_dialog_imageView"
        android:layout_width="33.67dp"
        android:layout_height="33.67dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/warning_icon"
        android:visibility="visible" />

    <TextView
        android:id="@+id/error_alert_dialog_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="ERROR MASSAGE"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/error_alert_dialog_textView_error_massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:gravity="left"
        android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat."
        android:textIsSelectable="false"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/error_alert_dialog_negative_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">


            <Button
                android:id="@+id/error_alert_dialog_negative_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="cencel" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="#d6d6d6"/>

        <LinearLayout
            android:id="@+id/error_alert_dialog_positive_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical">



            <Button
                android:id="@+id/error_alert_dialog_positive_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ok"
                android:background="@drawable/alert_background"
                android:textColor="#2993e1"
                android:stateListAnimator="@null"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>